{
  "manifest_version": 3,
  "name": "Text Selection Display",
  "version": "1.0",
  "description": "Display images and text based on selected text",
  "permissions": [
    "activeTab", "storage", "commands", "clipboardRead"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
